{
    "manifest_version": 3,
    "name": "iTabs",
    "version": "1.0.0",
    "description": "A modern new tab page.",
    "icons": {
        "128": "logo.png"
    },
    "chrome_url_overrides": {
        "newtab": "index.html"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "logo.png",
        "default_title": "iTabs"
    },
    "permissions": [
        "storage",
        "unlimitedStorage",
        "tabs",
        "activeTab"
    ],
    "host_permissions": [
        "https://api.unsplash.com/*",
        "https://*.workers.dev/*"
    ]
}